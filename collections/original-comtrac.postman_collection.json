{
	"info": {
		"_postman_id": "comtrac-original-001",
		"name": "BargeOps Original API - ComTrac",
		"description": "ComTrac integration endpoints for the Original API (.NET Framework 4.8). Includes schedule retrieval and unload data submission.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "basic",
		"basic": [
			{
				"key": "username",
				"value": "{{clientId}}",
				"type": "string"
			},
			{
				"key": "password",
				"value": "{{apiKey}}",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "ComTrac",
			"item": [
				{
					"name": "GetNewComtracSchedules",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Status Code Test",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// Response Time Test",
									"pm.test('Response time is acceptable (<5000ms)', function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(5000);",
									"});",
									"",
									"// Content-Type Test",
									"pm.test('Content-Type is application/json', function () {",
									"    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
									"});",
									"",
									"// Response Body Tests",
									"pm.test('Response is valid JSON array', function () {",
									"    pm.response.to.be.json;",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"});",
									"",
									"// Schema Validation",
									"pm.test('Response array items have expected structure', function () {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.length > 0) {",
									"        const firstItem = jsonData[0];",
									"        pm.expect(firstItem).to.have.property('BargeTripID');",
									"        pm.expect(firstItem).to.have.property('BargeNum');",
									"        pm.expect(firstItem).to.have.property('LoadLocation');",
									"        pm.expect(firstItem).to.have.property('Commodity');",
									"    }",
									"});",
									"",
									"// Store Response for Comparison",
									"pm.environment.set('lastResponse_GetNewComtracSchedules_Original', JSON.stringify(pm.response.json()));"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/ComTrac/GetNewComtracSchedules?clientId={{testClientId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "ComTrac", "GetNewComtracSchedules"],
							"query": [
								{
									"key": "clientId",
									"value": "{{testClientId}}",
									"description": "Client ID for ComTrac schedules"
								}
							]
						},
						"description": "Retrieves ComTrac schedule information for barge trips. Returns an array of schedule objects. **Note**: URL uses PascalCase /ComTrac/ (vs lowercase in Redux)."
					},
					"response": []
				},
